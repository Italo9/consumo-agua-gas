{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "outDir": "./dist",
    "rootDir": "./src", 
    "strict": true,   
    "noImplicitAny": true,  
    "strictNullChecks": true,     
    "esModuleInterop": true,    
    "forceConsistentCasingInFileNames": true,    
    "skipLibCheck": true,      
    "sourceMap": true,
    "resolveJsonModule": true, 
    "baseUrl": "./", 
    "paths": {
      "@models/*": ["src/models/*"], 
      "@controllers/*": ["src/controllers/*"]
    }
  },
  "include": ["src/**/*"],  
  "exclude": ["node_modules", "**/*.spec.ts"]   
}
